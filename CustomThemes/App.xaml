<Application
    x:Class="CustomThemes.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CustomThemes"
    StartupUri="/SplashScreen/SplashScreen.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/ThemeStyle/SoftDark.xaml" />
                <ResourceDictionary Source="/Themes/DynamicControls/ControlColours.xaml" />
                <ResourceDictionary Source="/Themes/DynamicControls/Controls.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
